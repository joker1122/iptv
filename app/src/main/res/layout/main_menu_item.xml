<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginLeft="@dimen/to_left"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">


        <TextView
            android:id="@+id/tv_number"
            android:layout_width="@dimen/number_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/item_name_text_color"
            android:textSize="@dimen/item_name_text_size" />

        <TextView
            android:id="@+id/tv_program_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/item_name_text_color"
            android:textSize="@dimen/item_name_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="@dimen/number_width"
            android:layout_height="match_parent">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/time_width"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textColor="@color/item_message_text_color"
            android:textSize="@dimen/item_message_text_size" />

        <TextView
            android:id="@+id/tv_next_program_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/item_message_text_color"
            android:textSize="@dimen/item_message_text_size" />
    </LinearLayout>

</LinearLayout>
