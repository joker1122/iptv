<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:gravity="center_vertical"
    android:minHeight="@dimen/item_height"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dir_pic_width"
        android:layout_height="@dimen/dir_pic_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dir_pic_to_left"
        android:src="@drawable/ic_file" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="@dimen/dir_pic_to_right"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/item_name_text_color"
        android:textSize="@dimen/item_name_text_size" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="@dimen/arrow_pic_height"
        android:layout_marginRight="@dimen/arrow_to_right"
        android:src="@drawable/arrow_right" />
</LinearLayout>
